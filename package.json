{
  "name": "python-lint",
  "displayName": "Python Linter",
  "description": "A work in progress version of the our python linter extension",
  "version": "0.0.1",
  "publisher": "Apoorva",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "test.emailCodeSnippet"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "test.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "test.logSelection",
        "title": "Log selected text"
      },
      {
        "command": "test.emailCodeSnippet",
        "title": "Email Code Snippet"
      }
    ]
    ,"menus": {
      "editor/context": [
        {
          "command": "test.emailCodeSnippet",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "nodemailer": "^7.0.6"
  }
}
